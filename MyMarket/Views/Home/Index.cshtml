@model IEnumerable<MyMarket.Models.DtoProduto>
@{
    ViewData["Title"] = "Home Page";
}
 
    <tbody>
       
            <div class= "row">          
            <div class="col-3">
                 @foreach (var item in Model)
                {
                <div class="card"> 
                     <a href="@Url.Action("Privacy")">
                     <svg> class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns= @Html.DisplayFor(modelItem => item.arquivo)
                         <rect width=260px height="100%" fill="#55595c"></rect></svg>
                         </a>
                        <div class="card-body"> 
                            <div class="col">
                                <div class="card-body">
                                       <div>
                                        @Html.DisplayFor(modelItem => item.nomeProduto)</div>                                      
                                              <div>R$
                                             @Html.DisplayFor(modelItem => item.valorVenda)</div>
                                              <div>Quantidade em estoque:
                                              @Html.DisplayFor(modelItem => item.estoque)</div>
                                       </div>   

                                </div>
                                <div>
                                      <a asp-action="Privacy" asp-route-id="@item.id" id="btn-add" class="btn btn-warning">adicionar ao carrinho</a>
                                </div>
                            </div>
                        </div>                
            }
            </div> 
                </div>
    </tbody>
</table>
</div>
</div> 

