@model MyMarket.Models.Produto

@{
    ViewData["Title"] = "Produto expandido";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="style.css" />
        
        <h1 id="text-produto">Cadastro</h1>
        <div class="album py-5 bg-light">
                <div class="container">
                <!--Linha Para descer o produto-->
                  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    <!--Imagem do Produto-->
                    <div class="col">
                      <div class="card shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg> 
                      </div>
                      <div >
                       @Html.DisplayFor(model => model.estoqueAtual) disponiveis
                        </div>
                    </div>
                    
    
                    <!--Coluna em Branco-->
                    <div class="col">
                    </div>
    
                    <!--Caixa de texto do produto-->
                    <div class="col">
                        <div class="card-body">

                        <h3> @Html.DisplayFor(model => model.nomeProduto)</h3>
                            <p class="valor-produto d-flex justify-content-center">@Html.DisplayFor(model => model.valorVenda)</p>
                            <div class="row">
                              <div class="col-md-3 d-flex justify-content-center">
                                <button id="btn-removitem" type="button" class="btn">-</button>
                              </div>
      
                              <div class="col-md-6 d-flex justify-content-center">
                                <p class="unidade-produto">UN</p>
                              </div>
      
                              <div class="col-md-3 d-flex justify-content-center">
                                <button id="btn-additem" type="button" class="btn">+</button>
                              </div>
                            </div>
                            
                            <div class="row">
                              <div class="col-md-12 d-flex justify-content-center">
                                <button id="btn-addcarrinho" type="button"  class="btn">Adicionar ao Carrinho</button>
                              </div>
                            </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
    <hr />
   
     

